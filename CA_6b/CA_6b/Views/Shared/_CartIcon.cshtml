@using CA_6b.Models;
@{
    var cart = (List<CartItem>)ViewData["cart"];
    var count = 0;
    if (cart != null)
    {
        foreach (var item in cart)
        {
            count += item.Quantity;
        }
    }
}

<button id="show" class="cartbutton"><i class="fas fa-shopping-cart"></i> @count</button>

